#! /bin/sh

DOCS_DIRECTORY="../docs/server"
HOSTING_BASE_PATH="/server"

swift package \
    --disable-sandbox \
    --allow-writing-to-directory ${DOCS_DIRECTORY} \
    generate-documentation --product Server \
    --transform-for-static-hosting \
    --hosting-base-path ${HOSTING_BASE_PATH} \
    --output-path ${DOCS_DIRECTORY}